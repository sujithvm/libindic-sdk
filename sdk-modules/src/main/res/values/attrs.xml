<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Attributes for FortuneTextView -->
    <declare-styleable name="FortuneTextView">
        <attr name="fortuneQuoteSet" format="enum">
            <enum name="chanakya" value="0" />
            <enum name="malayalam_proverbs" value="1" />
            <enum name="thirukkural" value="2" />
        </attr>
        <attr name="fortuneTimeInterval" format="integer" />
        <attr name="fortuneSearchPattern" format="string" />
    </declare-styleable>

    <!-- Common Attributes -->
    <attr name="targetLanguage" format="enum">
        <enum name="english_US" value="0" />
        <enum name="english_IN" value="1" />
        <enum name="hindi" value="2" />
        <enum name="bengali" value="3" />
        <enum name="punjabi" value="4" />
        <enum name="gujarati" value="5" />
        <enum name="oriya" value="6" />
        <enum name="tamil" value="7" />
        <enum name="telugu" value="8" />
        <enum name="kannada" value="9" />
        <enum name="malayalam" value="10" />
    </attr>

    <!-- Attributes for TransliteratorEditText -->
    <declare-styleable name="TransliteratorEditText">
        <attr name="transliteratedTextOutputTo" format="reference" />
        <attr name="targetLanguage" />
    </declare-styleable>

    <!-- Attributes for TransliteratorTextView -->
    <declare-styleable name="TransliteratorTextView">
        <attr name="targetLanguage" />
    </declare-styleable>



    <!-- Common attributes -->
    <attr name="payyansDirectionOfConversion" format="enum">
        <enum name="ASCIIToUnicode" value="0" />
        <enum name="UnicodeToASCII" value="1" />
    </attr>
    <attr name="payyansFontMap" format="enum">
        <enum name="ambili" value="0" />
        <enum name="charaka" value="1" />
        <enum name="haritha" value="2" />
        <enum name="indulekha" value="3" />
        <enum name="karthika" value="4" />
        <enum name="manorama" value="5" />
        <enum name="matweb" value="6" />
        <enum name="nandini" value="7" />
        <enum name="panchari" value="8" />
        <enum name="revathi" value="9" />
        <enum name="template" value="10" />
        <enum name="uma" value="11" />
        <enum name="valluvar" value="12" />
    </attr>

    <!-- Attributes for PayyansEditText -->
    <declare-styleable name="PayyansEditText">
        <attr name="payyansDirectionOfConversion" />
        <attr name="payyansFontMap" />
        <attr name="payyansOutputTo" format="reference" />
    </declare-styleable>

    <!-- Attributes for PayyansTextView -->
    <declare-styleable name="PayyansTextView">
        <attr name="payyansDirectionOfConversion" />
        <attr name="payyansFontMap" />
    </declare-styleable>


</resources>
