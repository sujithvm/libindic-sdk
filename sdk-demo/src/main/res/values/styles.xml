<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="HeaderTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:padding">@dimen/label_padding</item>
    </style>

    <style name="LabelTextView">
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:padding">@dimen/label_padding</item>
    </style>

    <style name="RegularTextView">
        <item name="android:layout_height">@dimen/regular_text_view_size</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:padding">@dimen/label_padding</item>
    </style>

    <style name="SampleTextView">
        <item name="android:layout_margin">@dimen/sample_textview_margin</item>
    </style>

    <style name="TableRowTextView">
        <item name="android:layout_marginLeft">@dimen/table_row_textview_margin</item>
        <item name="android:layout_marginBottom">@dimen/table_row_textview_margin</item>
        <item name="android:padding">@dimen/table_row_textview_padding</item>
        <item name="android:textSize">@dimen/table_row_textview_text_size</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="RegularButton">
        <item name="android:layout_height">@dimen/regular_button_size</item>
    </style>


</resources>
